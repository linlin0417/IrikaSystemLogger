{
  "name": "irika-system-logger",
  "version": "1.2.0",
  "description": "Structured logger with rotation, retention, console/file transports for Node 18+.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --out-dir dist",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "tsx --test \"tests/**/*.test.ts\" \"test/**/*.test.ts\""
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "eslint": "^9.13.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.6.3"
  }
}
